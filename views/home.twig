{% extends "base.twig" %}

{% block content %}

<div class="body_content">
{% for post in posts %}
    <h2><a href="{{ post.permalink }}">{{post.post_title}}</a></h2>
    {% include "meta.twig" %}
    <div class="entry">
        {% if post.post_excerpt %}
            {{ post.post_excerpt}}
        {% else %}
            {{ post.post_content|raw }}
        {% endif %}
        <a href="{{ post.permalink }}#more-{{ post.ID }}">Read more...</a>
    </div>
{% else %}
    <h2>Not found</h2>
{% endfor %}
</div>
{% endblock %}
