{% extends "base.twig" %}

{% block content %}
{% if wp.is_category(posts[0].post_category) %}
<h2>Archive for the &#8216;{{ wp.single_cat_title() }}&#8217; Category</h2>
{% elseif wp.is_tag(posts[0].post_tag) %}
<h2>Posts Tagged &#8216;{{ wp.single_tag_title() }}&#8217;</h2>
{% elseif wp.is_author %}
<h2>Author Archive</h2>
{% endif %}

<div class="body_content">
{% for post in posts %}
    <h2><a href="{{ post.permalink }}">{{post.post_title}}</a></h2>
    {% include "meta.twig" %}
    <div class="entry">
        {% if post.post_excerpt %}
            {{ post.post_excerpt}}
        {% else %}
            {{ post.post_content|raw }}
        {% endif %}
    </div>
{% else %}
    <h2>Not found</h2>
{% endfor %}
</div>
{% endblock %}
