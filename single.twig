{% extends "base.twig" %}

{% block title %} {{ parent() }}| {{ post.post_title }} {% endblock %}

{% block content %}
<div class="body_content" id="post-{{ post.ID }}">
    <h2>{{ post.post_title }}</h2>
    {% include "meta.twig" %}
    <div class="entry">
        {{ post.post_content|raw }}
    </div>
    {{ wp.edit_post_link('Edit this entry','','.') }}
</div>
{% endblock %}
