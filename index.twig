{% extends "base.twig" %}

{% block title %}{{wp.bloginfo('name')}} | Home Page{% endblock %}

{% block content %}

<div>
{% for post in posts %}
    <h2><a href="{{ post.guid }}">{{post.post_title}}</a></h2>
    {% include "meta.twig" %}
    <div class="entry">
        {% if post.post_excerpt != '' %}
            {{ post.post_excerpt}}
        {% else %}
            {{ post.post_content }}
        {% endif %}
    </div>
{% else %}
    <h2>Not found</h2>
{% endfor %}
</div>

{% include "sidebar.twig" %}
{% endblock %}
